@* 
@{
    ViewData["Title"] = "CarDetailsWebPage";
}

<section class="car-booking-page">
    <!-- Car Image and Information -->
    <div class="car-details">
        <div class="car-images">
            <img src="~/images/CarsListingPageSwiftImg.png" alt="Maruti Suzuki Swift">
            <img src="~/images/CarsListingPageSwiftImg.png" alt="Maruti Suzuki Swift">
            <img src="~/images/CarsListingPageSwiftImg.png" alt="Maruti Suzuki Swift">
        </div>
        <div class="car-info">
            <h2>Maruti Suzuki Swift</h2>
            <p>Manual, Petrol, 5 Seater</p>
            <div class="rating">
                <span>4.79</span>
                <span class="stars">★★★★★</span>
                <span>(35 Reviews)</span>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="reviews-section">
        <h3>Ratings & Reviews</h3>
        <div class="reviews">
            <div class="review">
                <p><strong>Puneeth M</strong></p>
                <p>This car was in great condition, smooth driving experience.</p>
            </div>
            <div class="review">
                <p><strong>Puneeth M</strong></p>
                <p>Comfortable for a family trip, would rent again!</p>
            </div>
            <div class="review">
                <p><strong>Puneeth M</strong></p>
                <p>Highly recommend this car, fuel-efficient and well-maintained.</p>
            </div>
            <div class="review">
                <p><strong>Puneeth M</strong></p>
                <p>Great car for city and highway driving. Good service too!</p>
            </div>
        </div>
    </div>

    <!-- Car Location -->
    <div class="car-location">
        <h3>Car Location</h3>
        <p>Madhipur, Near D-Mart (3.7 km away)</p>
        <img src="/images/location-map.png" alt="Map Location">
    </div>

    <!-- Features Section -->
    <div class="car-features">
        <h3>Features</h3>
        <ul>
            <li>USB charger</li>
            <li>Bluetooth</li>
            <li>Aux Input</li>
            <li>Air Purifier</li>
            <li>Boot Space</li>
            <li>A/C</li>
        </ul>
    </div>

    <!-- Policies and Agreement -->
    <div class="policies">
        <h3>Policies and Agreement</h3>
        <input type="checkbox" id="agree">
        <label for="agree">I agree to the terms and conditions of the Lease Agreement</label>
        <a href="#">View Details</a>
    </div>

    <!-- FAQ Section -->
    <div class="faq-section">
        <h3>FAQs</h3>
        <div class="faq">
            <p>How do I book a car?</p>
        </div>
        <div class="faq">
            <p>What does Fastag enabled mean?</p>
        </div>
        <div class="faq">
            <p>What happens if I return the car with extra fuel?</p>
        </div>
        <div class="faq">
            <p>Who will recharge the FASTag?</p>
        </div>
    </div>
</section>

<!-- Checkout Section -->
<aside class="checkout-box">
    <h3>Checkout</h3>
    <p>Pickup Date & Time: <strong>7 Oct, 10:00 AM</strong></p>
    <p>Dropoff Date & Time: <strong>8 Oct, 10:00 AM</strong></p>
    <p>Price: <strong>₹11,000</strong></p>
    <button class="confirm-booking">Confirm Booking</button>
</aside>

 *@